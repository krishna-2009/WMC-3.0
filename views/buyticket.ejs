        * {
            padding: 0px;
            margin: 0;
            box-sizing: border-box;
        }

        :root {
            --animate-duration: 800ms;
            --animate-delay: 0.9s;
        }

        .animate__animated.animate__backInRight {
            --animate-duration: 2.78s;
        }

        .animate__animated.animate__bounce {
            --animate-duration: 4s;
        }

        body {
            background-color: rgb(87 83 83);
        }

        h4 {
            margin: 14px;
        }

        #navbar ul {
            display: flex;
            justify-content: center;
            margin-right: 80px;
            align-items: center;
            background: black;
            height: 30px;

        }

        #navbar ul li {
            list-style: none;
            margin-left: 45px;
            margin-top: 10px;
            margin-bottom: 20px;
            padding-left: 36px;
            font-size: 12px;
        }

        #navbar ul li a {
            color: #ffffff;
            text-decoration: none;
            font-size: 20px;
            font-weight: bolder;
        }

        #navbar ul li a:hover {
            font-size: 20px;
            border: 7px solid black;
            border-radius: 20px;
            background-color: white;
            color: rgb(74, 117, 78);
        }

        section {
            margin: 20px;
        }

        .row {
            background: white;
            border-radius: 30px;
            box-shadow: 22px 22px 22px black;
        }

        img {
            border-top-left-radius: 30px;
            border-bottom-left-radius: 30px;

        }

        #msg {
            margin: 10px;
            text-align: center;
            font-size: 40px;
            font-family: 'Satisfy', cursive;
            font-weight: bold;
        }

        label {
            font-family: 'Satisfy', cursive;
            font-size: 30px;
        }

        .btn1 {
            border: none;
            outline: none;
            height: 50px;
            width: 100%;
            background-color: black;
            color: white;
            border-radius: 4px;
            font-weight: bold;
        }

        .btn1:hover {
            background: rgb(90, 89, 89);
            border: 1px solid;
            color: lightgreen;
            cursor: pointer;
        }

        .footer {
            color: black;
            margin-top: -5px;
        }

        .footer .footer_top .container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .footer .footer_top .container h3 {
            display: block;
            font-weight: bold;
            padding: 2px;
            margin: 0px;
            font-size: 34px;
        }

        .footer .footer_bottom #copyright_text {
            display: flex;
            flex-direction: column;
            justify-content: center;
            font-weight: bold;
            align-items: center;
        }

        .logo_of_social_media .img_of_social_media {
            padding: 2px 20px;
        }

        .logo_of_social_media {
            display: flex;
            list-style: none;
            justify-content: center;
            align-items: center;
            padding: 2px 2px;
        }

        .fa {
            padding: 20px;
            font-size: 20px;
            width: 54px;
            text-align: center;
            text-decoration: none;
            margin: 2px 6px;
            height: 51px;
            border-radius: 49%;
        }

        .fa:hover {
            opacity: 0.7;
        }

        .fa-facebook {
            background: #3B5998;
            color: white;
        }

        .fa-twitter {
            background: #55ACEE;
            color: white;
        }

        .fa-youtube {
            background: #bb0000;
            color: white;
        }

        .fa-instagram {
            background: #f7274a;
            color: white;
        }
